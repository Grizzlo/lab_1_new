<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp" android:rowCount="1" android:columnCount="8">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:id="@+id/btn_back_playground" android:onClick="goToMenu" android:layout_row="0"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:minWidth="75dp"/>
    <com.serj.thevirusgame.app.Draw
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:id="@+id/game_view"
            android:layout_column="7"
            android:layout_toEndOf="@+id/btn_back_playground"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_back_playground"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/move"
            android:id="@+id/move"
            android:layout_below="@+id/btn_back_playground" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="43dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:id="@+id/move_value" android:layout_below="@+id/move" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>


